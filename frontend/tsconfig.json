{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist",
    "paths": {
      // viteなので関係ないがvscodeの補完を効かせるために必要
      "@/*": [
        "src/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "types": [
      "vite/client",
      "jest"
    ]
  }
}